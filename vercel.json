{
  "rewrites": [
    {
      "source": "/productos/:name",
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": "(.*facebookexternalhit.*|.*twitterbot.*|.*linkedinbot.*.*pinterestbot.*|.*googlebot.*)"
        }
      ],
      "destination": "https://service.prerender.io/https://mammasoul.com/productos/:name?prerenderToken=$PRERENDER_TOKEN"
    },
    
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/inicio",
      "destination": "/index.html"
    },
    {
      "source": "/productos",
      "destination": "/index.html"
    },
    {
      "source": "/productos/:id", 
      "destination": "/index.html"
    },
    {
      "source": "/compra/cliente",
      "destination": "/index.html"
    },
    {
      "source": "/compra/confirmar",
      "destination": "/index.html"
    },
    {
      "source": "/compra/aprobada",
      "destination": "/index.html"
    },
    {
      "source": "/compra/rechazada",
      "destination": "/index.html"
    },
    {
      "source": "/contacto",
      "destination": "/index.html"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ]
}
